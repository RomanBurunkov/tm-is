{
  "name": "tm-is",
  "version": "0.3.0",
  "description": "JavaScript basic 'is' functions.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore lib/** index.js",
    "lint:tests": "eslint --fix --ignore-path .gitignore test/lib/**",
    "lint:fix": "eslint --fix --ignore-path .gitignore lib/** index.js test/lib/**",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RomanBurunkov/tm-is.git"
  },
  "keywords": [
    "is, isObject, isFunction, isFunc, isEmpty, isUndefined, isEqual"
  ],
  "author": "Roman Burunkov <romon2002@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RomanBurunkov/tm-is/issues"
  },
  "homepage": "https://github.com/RomanBurunkov/tm-is#readme",
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^27.5.1"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "legacyDecorators": true
      }
    },
    "extends": [
      "airbnb-base"
    ],
    "rules": {
      "import/prefer-default-export": "off"
    }
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testRegex": ".spec.js$",
    "coverageDirectory": "./coverage"
  }
